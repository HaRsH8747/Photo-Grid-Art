        <item name="android:gravity">top|left|center_vertical|center_horizontal|center</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingTop">@dimen/padding_extra_normal</item>
        <item name="android:paddingBottom">@dimen/padding_small</item>
