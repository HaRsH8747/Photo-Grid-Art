    <style name="effect_header_button_style">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:onClick">myClickHandler</item>
    </style>
    <style name="effect_footer_imagebutton_style">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:background">@drawable/collage_footer_button</item>
        <item name="android:paddingTop">@dimen/padding_small</item>
        <item name="android:paddingBottom">@dimen/padding_small</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">@dimen/collage_context_button_style_min_width</item>
        <item name="android:minHeight">@dimen/collage_context_button_style_min_width</item>
        <item name="android:drawablePadding">@dimen/padding_small</item>
        <item name="android:layout_weight">1</item>
        <item name="android:onClick">myClickHandler</item>
    </style>
    <style name="effect_footer_imagebutton_style1">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:onClick">myClickHandler</item>
    </style>
    <style name="PickerEditText">
        <item name="android:textSize">22sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:imeOptions">actionNext</item>
    </style>
    <style name="collage_ratio_button_style">
        <item name="android:textSize">@dimen/collage_ratio_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_collage_ratio_button</item>
        <item name="android:layout_width">@dimen/header_card_height</item>
        <item name="android:layout_height">@dimen/header_card_height</item>
        <item name="android:layout_weight">1</item>
        <item name="android:onClick">myClickHandler</item>
    </style>

    <style name="mirror_button_style">
        <item name="android:gravity">top|left|center_vertical|center_horizontal|center</item>
        <item name="android:paddingLeft">@dimen/padding_small</item>
        <item name="android:paddingRight">@dimen/padding_small</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:onClick">myClickHandler</item>
    </style>
    <style name="effect_seek_bar_style">
        <item name="android:paddingLeft">18dp</item>
        <item name="android:paddingRight">18dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxHeight">12dp</item>
        <item name="android:progress">50</item>
        <item name="android:minHeight">12dp</item>
    </style>
    <style name="RatingBar" parent="@style/Theme.AppCompat">
        <item name="colorControlActivated">@color/duskYellow</item>
        <item name="colorControlNormal">@color/lightGrey</item>
    </style>
