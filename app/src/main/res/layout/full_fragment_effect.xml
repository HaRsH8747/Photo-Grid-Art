<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/button_dummy"
        android:layout_below="@+id/full_fragment_apply_filter_header"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter" />

    <androidx.cardview.widget.CardView
        android:id="@+id/full_fragment_apply_filter_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:visibility="visible"
        app:cardBackgroundColor="@color/start_color"
        app:cardCornerRadius="8dp"
        app:cardElevation="@dimen/all_elevation"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:padding="5dp"
            android:weightSum="2">

            <LinearLayout

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:baselineAligned="false">

                <RelativeLayout
                    android:id="@+id/button_cancel_filter"
                    style="@style/effect_header_button_style"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_below="@+id/iv_Back"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentBottom="true"
                        android:fontFamily="@font/l_regular"
                        android:gravity="center"
                        android:text="@android:string/cancel"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/iv_Back"
                        android:layout_width="@dimen/tool_icon_size2"
                        android:layout_height="@dimen/tool_icon_size2"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/clear"
                        android:backgroundTint="@android:color/white"
                        android:scaleType="centerInside" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:baselineAligned="false">

                <RelativeLayout
                    android:id="@+id/button_apply_filter"
                    style="@style/effect_header_button_style"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_below="@+id/iv_save1"
                        android:layout_alignParentBottom="true"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="@android:string/ok"
                        android:fontFamily="@font/l_regular"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"/>

                    <ImageView
                        android:id="@+id/iv_save1"
                        android:layout_width="@dimen/tool_icon_size2"
                        android:layout_height="@dimen/tool_icon_size2"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/ok"
                        android:backgroundTint="@android:color/white"
                        android:scaleType="centerInside"
                        android:textAllCaps="false" />

                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!--<LinearLayout
        android:id="@+id/full_fragment_apply_filter_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_alignParentTop="true"
        android:background="@color/primary"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:id="@+id/button_cancel_filter"
            style="@style/effect_header_button_style"
            android:background="@drawable/selector_btn_header"
            android:clickable="true"
            android:gravity="center"
            android:text="@android:string/cancel" />

        <TextView
            android:id="@+id/button_apply_filter"
            style="@style/effect_header_button_style"
            android:background="@drawable/selector_btn_header"
            android:clickable="true"
            android:gravity="center"
            android:text="@android:string/ok" />
    </LinearLayout>-->

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

    <LinearLayout
        android:id="@+id/button_dummy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:visibility="invisible">

        <Button
            style="@style/effect_footer_imagebutton_style"
            android:drawableTop="@drawable/lib_effect"
            android:text="Fx" />

    </LinearLayout>
</RelativeLayout>
