<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/filter_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ViewSwitcher
            android:id="@+id/viewswitcher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <neo.photogridart.utils.MyViewFlipper
                    android:id="@+id/control_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/filter_RecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_55sdp"
                        android:layout_gravity="bottom"
                        android:scrollbars="horizontal" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/border_RecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_55sdp"
                        android:layout_gravity="bottom"
                        android:scrollbars="horizontal" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/overlay_RecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_55sdp"
                        android:layout_gravity="bottom"
                        android:scrollbars="horizontal" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/texture_RecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_55sdp"
                        android:layout_gravity="bottom"
                        android:scrollbars="horizontal" />

                    <LinearLayout
                        android:id="@+id/seekbar_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@color/blacktransparent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/seekbar_hint"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:singleLine="true"
                            android:textColor="#ffffff" />

                        <neo.photogridart.common_lib.SeekBarHint
                            android:id="@+id/seek_bar_adjustment"
                            style="@style/effect_seek_bar_style"
                            android:padding="12dp"
                            android:progress="50"
                            android:progressTint="@color/end_color"
                            android:thumb="@drawable/control" />
                    </LinearLayout>

                    <View
                        android:id="@+id/bluefish_lib_flipper_void"
                        android:layout_width="0dp"
                        android:layout_height="0dp" />
                </neo.photogridart.utils.MyViewFlipper>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/button_lib_cancel"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:background="@color/blacktransparent"
                        android:minWidth="@dimen/header_card_height"
                        android:minHeight="@dimen/header_card_height"
                        android:onClick="myClickHandler"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:src="@drawable/close" />

                    <Button
                        android:id="@+id/lib_current_adjustmen_label"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:background="@color/blacktransparent"
                        android:minWidth="@dimen/header_card_height"
                        android:minHeight="@dimen/header_card_height"
                        android:onClick="myClickHandler"
                        android:paddingTop="@dimen/padding_small"
                        android:paddingBottom="@dimen/padding_small"
                        android:text="Effects"
                        android:textColor="#ffffff"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/button_lib_ok"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:background="@color/blacktransparent"
                        android:minWidth="@dimen/header_card_height"
                        android:minHeight="@dimen/header_card_height"
                        android:onClick="myClickHandler"
                        android:paddingTop="@dimen/padding_small"
                        android:paddingBottom="@dimen/padding_small"
                        android:src="@drawable/ok_white" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/mini_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/button_filter_reset"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/selector_btn_reset_lib"
                        android:gravity="bottom|center_vertical|center_horizontal|center"
                        android:minWidth="@dimen/_55sdp"
                        android:onClick="myClickHandler"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:text="Reset"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/_9sdp" />
                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/blacktransparent"
                    android:orientation="horizontal"
                    android:paddingTop="5dp"
                    android:weightSum="5">

                    <RelativeLayout
                        android:id="@+id/button_fx"
                        style="@style/effect_footer_imagebutton_style1"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/ttbutton_fx"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_below="@+id/lib_effect"
                            android:gravity="center"
                            android:text="Effects"
                            android:textColor="@color/light_gray_text_color"
                            android:textSize="@dimen/tool_text_size" />

                        <ImageView
                            android:id="@+id/lib_effect"
                            android:layout_width="@dimen/tool_icon_size"
                            android:layout_height="@dimen/tool_icon_size"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/lib_effect"
                            android:scaleType="centerInside" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/button_frame"
                        style="@style/effect_footer_imagebutton_style1"
                        android:layout_centerInParent="true"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/ttbutton_frame"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_below="@+id/lib_frame"
                            android:gravity="center"
                            android:text="Frame"
                            android:textColor="@color/light_gray_text_color"
                            android:textSize="@dimen/tool_text_size" />

                        <ImageView
                            android:id="@+id/lib_frame"
                            android:layout_width="@dimen/tool_icon_size"
                            android:layout_height="@dimen/tool_icon_size"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/lib_frame"
                            android:scaleType="centerInside" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/button_light"
                        style="@style/effect_footer_imagebutton_style1"
                        android:layout_centerInParent="true"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/ttlib_light"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_below="@+id/lib_light"
                            android:gravity="center"
                            android:text="Overlay"
                            android:textColor="@color/light_gray_text_color"
                            android:textSize="@dimen/tool_text_size" />

                        <ImageView
                            android:id="@+id/lib_light"
                            android:layout_width="@dimen/tool_icon_size"
                            android:layout_height="@dimen/tool_icon_size"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/lib_light"
                            android:scaleType="centerInside" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/button_texture"
                        style="@style/effect_footer_imagebutton_style1"
                        android:layout_centerInParent="true"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/ttlib_texture"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_below="@+id/lib_texture"
                            android:gravity="center"
                            android:text="Texture"
                            android:textColor="@color/light_gray_text_color"
                            android:textSize="@dimen/tool_text_size" />

                        <ImageView
                            android:id="@+id/lib_texture"
                            android:layout_width="@dimen/tool_icon_size"
                            android:layout_height="@dimen/tool_icon_size"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/lib_texture"
                            android:scaleType="centerInside" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/button_blur"
                        style="@style/effect_footer_imagebutton_style1"
                        android:layout_centerInParent="true"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/ttlib_blur"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_below="@+id/lib_blur"
                            android:gravity="center"
                            android:text="Blur"
                            android:textColor="@color/light_gray_text_color"
                            android:textSize="@dimen/tool_text_size" />

                        <ImageView
                            android:id="@+id/lib_blur"
                            android:layout_width="@dimen/tool_icon_size"
                            android:layout_height="@dimen/tool_icon_size"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/lib_blur"
                            android:scaleType="centerInside" />

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

        </ViewSwitcher>
    </LinearLayout>
</RelativeLayout>
